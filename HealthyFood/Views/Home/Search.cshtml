@{
    ViewBag.Title = "Search Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sản Phẩm Tìm Kiếm</h2>
<div class="row">
    @foreach (var item in ViewBag.SP)
    {
        string @gia = string.Format("{0:#,##0}", @item.Giaban);
        <div class="col-lg-4 col-md-6 col-sm-6">
            <div class="product__item">
                <div class="product__item__pic set-bg" data-setbg="@item.Anhbia">
                    <ul class="product__item__pic__hover">
                        <li><a href="#"><i class="fa fa-heart"></i></a></li>
                        <li><a href="productDetail/@item.MaSanPham"><i class="fa fa-eye"></i></a></li>
                        <li><a href="/ShoppingCart/ThemGioHang/@item.MaSanPham"><i class="fa fa-shopping-cart"></i></a></li>
                    </ul>
                </div>
                <div class="product__item__text">
                    <h6><a href="#">@item.TenSanPham</a></h6>
                    <h5>@gia đ</h5>
                </div>
            </div>

        </div>
    }
</div>
