@{
    ViewBag.Title = "CheckOut Page";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Thanh toán</h2>
                    <div class="breadcrumb__option">
                        <a href="/Home/Index">Home</a>
                        <span>Thanh toán</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Checkout Section Begin -->
@if (ViewBag.DSSanPham != null)
{
    string @total = string.Format("{0:#,##0}", @ViewBag.TongTien);
    string @checkOut = string.Format("{0:#,##0}", @ViewBag.ThanhToan);
    <section class="checkout spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h6>
                        <span class="icon_tag_alt"></span> Có phiếu giảm giá? <a href="#">Bấm vào đây</a> để nhập mã của
                        bạn
                    </h6>
                </div>
            </div>
            <div class="checkout__form">
                <h4>Chi tiết thanh toán </h4>
                <form action="ProcessOrder" method="post">
                    <div class="row">
                        <div class="col-lg-8 col-md-6">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Họ Tên<span>*</span></p>
                                        <input type="text" name="name">
                                    </div>
                                </div>
                            </div>
                            <div class="checkout__input">
                                <p>Địa chỉ<span>*</span></p>
                                <input type="text" placeholder="Địa chỉ đường phố " class="checkout__input__add" name="address">
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Số điện thoại<span>*</span></p>
                                        <input type="text" name="phone">
                                    </div>
                                </div>
                            </div>
                            <div class="checkout__input">
                                <p>Ghi chú đơn hàng <span>*</span></p>
                                <input type="text"
                                       placeholder="Ghi chú về đơn đặt hàng của bạn, ví dụ: những lưu ý đặc biệt khi giao hàng." name="description">
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <div class="checkout__order">
                                <h4>Đơn hàng của bạn</h4>
                                <div class="checkout__order__products">Sản phẩm <span>Giá</span></div>
                                @foreach (var item in ViewBag.DSSanPham)
                                {
                             
                                    string @thanhtien = string.Format("{0:#,##0}", @item.ThanhTien);
                                    <ul>

                                        <li>@item.TenSanPham <span>@thanhtien</span></li>
                                    </ul>
                                }
                                    <div class="checkout__order__subtotal">Tổng phụ<span> @total</span></div>
                                    <div class="checkout__order__total" >Tổng<span > @checkOut</span></div>
                                    <div class="checkout__input__checkbox">
                                        <label for="acc-or">
                                            Chấp nhận điều khoản đặt hàng ?
                                            <input type="checkbox" id="acc-or">
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>


                                    <button type="submit" class="site-btn">Đặt hàng</button>
                                </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
}

