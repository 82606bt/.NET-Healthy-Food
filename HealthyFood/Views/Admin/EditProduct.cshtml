@{
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}
<div class="section__content section__content--p30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                @using (Html.BeginForm("EditProduct", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "was-validated" }))
                {

                    <div class="form-group">
                        <label for="tencongty"> Tên Sách</label>
                        <input type="text" class="form-control" id="Name" name="Name" value="@Model.TenSanPham" required>
                        <div class="valid-feedback">cám ơn.</div>
                        <div class="invalid-feedback">Vui lòng nhập</div>
                    </div>
                    <div class="form-group">
                        <div class="custom-file mb-3">
                            <input type="file" class="custom-file-input" id="customFile" name="uploadImage" value="@Model.uploadImage" required>
                            <img style="height:50px; width:50px;" src="@Model.Anhbia">
                            <label class="custom-file-label" for="customFile">Choose file</label>
                            <div class="valid-feedback">cám ơn.</div>
                            <div class="invalid-feedback">Vui lòng nhập</div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="mota">Mô tả </label>
                        <textarea class="form-control" id="Description" name="Description" rows="7" required></textarea>@Model.Mota
                        <div class="valid-feedback">cám ơn.</div>
                        <div class="invalid-feedback">Vui lòng nhập</div>
                    </div>
                    <div class="form-group">
                        <label for="nguoilh">Giá</label>
                        <input type="text" class="form-control" id="Price" name="Price" value="@Model.Giaban" required>
                        <div class="valid-feedback">cám ơn.</div>
                        <div class="invalid-feedback">Vui lòng nhập</div>
                    </div>
                    <div class="form-group">
                        <label for="sdt">Số lượng</label>
                        <input type="text" class="form-control" id="SoLuong" name="SoLuong" value="@Model.Soluongton" required>
                        <div class="valid-feedback">cám ơn.</div>
                        <div class="invalid-feedback">Vui lòng nhập</div>
                    </div>
                    <div class="form-group">
                        <h4>Sản Phẩm : </h4>
                        <div style="display: flex;flex-direction: column;">
                            <label class="radio-inline"><input type="radio" value="false" name="DacTrung">Cũ</label>
                            <label class="radio-inline"><input type="radio" value="true" name="DacTrung">Mới</label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Cập Nhật</button>
                }

            </div>
        </div>
    </div>
</div>

